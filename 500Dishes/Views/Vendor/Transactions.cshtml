@model _500Dishes.Models.TransactionsViewModel

@{
    ViewBag.Title = "Transactions";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<h2>Transactions</h2>

<div>
    <hr />
    
    <p class="lead text-muted">Balance:  @Model.Balance</p>
    <br />

    @if (Model.Withdrawals.Count == 0)
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            No withdrawals yet
        </div>
    }
    <table class="table table-striped table-hover table-responsive table-condensed">
        <tr>
            <th>
                Date
            </th>
            <th>
                Description
            </th>
            <th>
                Amount
            </th>
            
            <th></th>
        </tr>
        @foreach (var item in Model.Withdrawals) {
        <tr>
            <td>
                @item.Date
            </td>
            <td>
                @item.ExtraText
            </td>
            <td>
                @if (item.Withdrawal)
                {
                    <span class="text-danger">(@item.Amount)</span>
                }
                else
                {
                    <span class="text-success">@item.Amount</span>
                }
            </td>
            
